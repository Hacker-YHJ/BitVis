extends templates/_default.jade

block css
  link(href='/css/sign_up.css', rel='stylesheet')

block contents
  .container.center-vertical.center-horizontal
    h1 注册并开始
    h2 与火花上的小伙伴们一起分享你的故事!
    .row
      .col-lg-6.col-md-6.col-sm-6.hidden-xs
        button.btn.btn-default 通过Fackbook登录
      .col-lg-6.col-md-6.col-sm-6.col-xs-12
        form#signUp(accept-charset='utf-8')
          .form-group
            input.form-control(type='text', placeholder='姓名')
          .form-group
            input.form-control(type='email', placeholder='邮箱')
          .form-group
            input.form-control(type='password', placeholder='密码')
          .form-group
            input.form-control.btn.btn-default(type='submit', value='创建用户')

block js_includes
  script(src='js/sign_up.js', type='text/javascript')